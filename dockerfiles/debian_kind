FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install apt-utils gcc \
    vim unzip   \
	fakeroot dbus base whiptail hexedit \
	patch wamerican ucf manpages \
	file luajit make lua50 dialog curl \
	less cowsay netcat-openbsd\
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg2 \
    software-properties-common 

# Download and install Docker static binaries
RUN curl -fsSL https://download.docker.com/linux/static/stable/i386/docker-20.10.7.tgz | tar -xz -C /usr/local/bin --strip-components=1 docker/docker

# Download and install Go
ENV GO_VERSION=1.21.3
RUN curl -LO https://golang.org/dl/go${GO_VERSION}.linux-386.tar.gz && \
    tar -C /usr/local -xzf go${GO_VERSION}.linux-386.tar.gz && \
    rm go${GO_VERSION}.linux-386.tar.gz && \
	go install sigs.k8s.io/kind@v0.25.0

# Set up Go environment variables
ENV PATH="/usr/local/go/bin:${PATH}"
ENV GOPATH="/home/user/go"
ENV PATH="${GOPATH}/bin:${PATH}"

RUN useradd -m user && echo "user:password" | chpasswd
COPY --chown=user:user ./examples /home/user/examples
RUN chmod -R +x  /home/user/examples/lua
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/user/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd
CMD [ "/bin/bash" ]
